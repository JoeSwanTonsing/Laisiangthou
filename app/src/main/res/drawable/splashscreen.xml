<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <bitmap
            android:src="@drawable/diamond_upholstery"
            android:tileMode="repeat" />
    </item>
    <item android:bottom="@dimen/activity_horizontal_margin">
        <bitmap
            android:gravity="center"
            android:src="@drawable/bible" />
    </item>
    <item
        android:bottom="@dimen/activity_horizontal_margin"
        android:top="@dimen/activity_horizontal_margin">
        <bitmap
            android:gravity="bottom|center_horizontal"
            android:src="@drawable/product_logo" />
    </item>

</layer-list>